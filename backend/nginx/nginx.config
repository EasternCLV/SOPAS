server {
    listen 3000;  # Nginx sẽ lắng nghe trên cổng 3000

    # Cấu hình reverse proxy cho ứng dụng auth
    location /auth {
        proxy_pass http://authentication:3001;  # Chuyển tiếp yêu cầu đến container auth trên cổng 3001
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /backend {
        proxy_pass http://backend:3002;  # Chuyển tiếp yêu cầu đến container backend trên cổng 3002
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
